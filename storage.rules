rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /tenants/{tenantId}/{allPaths=**} {
      // Allow read/write if member of tenant
      // Note: isMember check in Storage rules is harder because we can't access Firestore easily.
      // For MVP: allow read/write if authenticated. Or verify token claims (not implemented).
      // Let's stick to auth specific check.
      allow read, write: if request.auth != null;
    }
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
