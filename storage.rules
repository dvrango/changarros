rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /tenants/{tenantId}/{allPaths=**} {
      // Public read â€” the storefront shows product images without auth
      allow read: if true;

      // Write only for platform admins or authenticated members of this specific tenant
      allow write: if request.auth != null && (
        request.auth.token.platformAdmin == true ||
        firestore.exists(/databases/(default)/documents/tenants/$(tenantId)/memberships/$(request.auth.uid))
      );
    }
    // Everything outside /tenants/ is denied by default
  }
}
